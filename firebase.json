{
  "hosting": [
    {
      "target": "moonlet-wallet",
      "public": "hosting/moonlet-wallet.firebaseapp.com",
      "rewrites": [
          {
              "source": "/api/exchangeRates",
              "function": "exchangeRates"
          }
      ]
    }, {
      "appAssociation": "AUTO",
      "target": "moonlet-website",
      "public": "hosting/moonlet.xyz",
      "rewrites": [
        { 
            "source": "/links/**", 
            "dynamicLinks": true 
        },
        {
            "source": "/wp-json/**",
            "function": "wpProxy"
        }
      ]
    }],
    "functions": {
      "source": "src/functions"
   }
}
